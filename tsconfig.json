{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/Loading.js",
    "components/Error.js",
    "components/Form.js",
    "components/List.jsx",
    "components/Card.jsx",
    "api/todos/route.js",
    "pages/index.tsx",
    "pages/_document.js",
    "pages/_app.js",
    "components/Header.js"
  ],
  "exclude": ["node_modules"]
}
